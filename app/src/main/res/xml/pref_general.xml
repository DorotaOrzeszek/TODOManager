<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="false"
        android:key="night_mode"
        android:summary="@string/pref_description_night_mode"
        android:title="@string/pref_title_night_mode" />

    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_sort_todos_titles"
        android:entryValues="@array/pref_sort_todos_values"
        android:key="sort_todos"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_sort_todos" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="show_done"
        android:summary="@string/pref_description_show_done"
        android:title="@string/pref_title_show_done" />

    <Preference android:title="@string/pref_title_import_todos"
        android:key="@string/import_todos"
        android:summary="@string/pref_description_import_todos"/>

    <Preference android:title="@string/pref_title_export_todos"
        android:key="@string/export_todos"
        android:summary="@string/pref_description_export_todos"/>

</PreferenceScreen>
